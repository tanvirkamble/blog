<%- include("partials/header"); -%>
  <h1>Compose</h1>
  <form class="" action="/compose" method="post">
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" name="postTitle">
      <label>Post</label>
      <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
      <h3>Select postTags:</h3>
      <label>
        <input type="checkbox" name="postTags" value="Work"> Work
      </label>
      <label>
        <input type="checkbox" name="postTags" value="Personal"> Personal
      </label>
      <label>
        <input type="checkbox" name="postTags" value="Health"> Health
      </label>
      <label>
        <input type="checkbox" name="postTags" value="Other"> Other
      </label>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </form>

  <%- include("partials/footer"); -%>